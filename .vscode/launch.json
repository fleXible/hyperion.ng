  "version": "0.2.0",
  "configurations": [
    {
      "name": "(Linux) hyperiond",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/hyperiond",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      // for OSX
      "name": "hyperiond",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceRoot}/deploy/hyperiond",
      "args": ["--debug", "--userdata ${workspaceRoot}/deploy/hyperion"],
      "miDebuggerServerAddress": "raspberrypi.fritz.box:9091",
      "sourceFileMap": { "/hyperion.ng": "${workspaceRoot}" },
      "stopAtEntry": false,
      "cwd": "${workspaceRoot}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
    },
    {
      "name": "(Windows) hyperiond",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/Debug/hyperiond.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false
    }
  ]
}
